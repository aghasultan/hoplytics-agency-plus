{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#0f172a",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#3b82f6",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#f97316",
          "name": "Accent"
        },
        {
          "slug": "text",
          "color": "#334155",
          "name": "Text"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        },
        {
          "slug": "surface",
          "color": "#f8fafc",
          "name": "Surface"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "css": "@media (prefers-color-scheme: dark) { body { background-color: var(--wp--preset--color--primary); color: var(--wp--preset--color--surface); } }"
  }
}